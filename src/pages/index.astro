          bydel="Næstved"
          vurdering="Vurderet til"
          vurderingspris="DKK 40.000"
          naestebud="NÆSTE BUD"
          bud="DKK 30.000"
          button="Se varen"
        />
      </div>
      <div>
        <Card
          img="billede"
          banner="SLUTTER OM 4 TIMER OG 12 MINUTTER"
          titel="HAY SOFA"
          ikon=""
          lokation="Varens lokation"
          bydel="Nørrebro"
