    <div class="kategori">
      <Kategori img="billede" titel="BILER OG BÅDE" />

      <Kategori img="billede" titel="ELEKTRONIK" />

      <Kategori img="billede" titel="GLAS, PORCELÆN OG KERAMIK" />
